<div class="row-fluid">
	<div class="widget-box transparent">
		<div class="widget-header widget-header-flat widget-header-small">
			<h5>
				<i class="icon-signal"></i>
				概况
			</h5>
		</div>

		<div class="widget-body">
			<div class="widget-main">
				<div id="map-container" style="height: 550px">
				</div>
			</div><!--/widget-main-->
		</div><!--/widget-body-->
	</div>
</div>


<div class="hr hr-double hr-dotted hr18"></div>

<div class="row-fluid">
	<div class="span6">
		<h3 class="header smaller lighter blue">出租车</h3>
		<div class="table-header">
			司机列表
		</div>
		<table class="table" id="drivers_list">
			<% @drivers.each do |driver| %>
			<tr>
				<td>
					<%= check_box_tag "driver", driver.id ,false,{:class =>"ace-switch ace-switch-1" }%>
					<span class="lbl"></span>
				</td>
				<td><%= driver.mobile %></td>
				<td><%= driver.try(:name) %></td>
			</tr>
			<% end %>
		</table>
	</div>
	<div class="span6">
	</div>
</div>
<%= content_tag "div", id: "driver_ids" do %>
<% end %>
