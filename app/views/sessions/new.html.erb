<%= simple_form_for :sessions  ,url: sessions_path, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	<%= f.error :base , :error_method => :to_sentence %>
	<fieldset>
		<%= f.input :account %>
		<%= f.input :password%>
	</fieldset>
	<div class="form-actions">
		<%= f.submit '登录' %>
	</div>
<% end %>