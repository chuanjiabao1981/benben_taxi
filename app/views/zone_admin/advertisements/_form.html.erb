<%= simple_form_for [:zone_admin,advertisement] ,:html => { :class => 'form-horizontal'  } do |f|%>
	<%= f.error_notification %>
	<%= f.error :base , :error_method => :to_sentence %>
	<fieldset>
		<%= f.input :content %>
		<%= f.input :start_time,as: :string %>
		<%= f.input :end_time,as: :string %>
	</fieldset>
	<div class="form-actions">
		<%= f.button :submit , :class => 'btn btn-primary' %>
		<%= link_to I18n.t('views.text.cancel'), [:zone_admin,:advertisements], :class => 'btn btn-gray' %>
	</div>
<% end %>