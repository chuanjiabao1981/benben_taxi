<%= simple_form_for  [:zone_admin,user] ,url: passenger_url ,:html => { :class => 'form-horizontal'  } do |f|%>
	<%= f.error_notification %>
	<%= f.error :base , :error_method => :to_sentence %>
	<fieldset>
		<%= f.input :mobile %>
		<%= f.input :name %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.input :status,collection: User.status_collections ,:include_blank => false%>
	</fieldset>
	<div class="form-actions">
		<%= button_tag "保存" , :class => 'btn btn-primary' %>
		<%= link_to I18n.t('views.text.cancel'), zone_admin_passengers_path, :class => 'btn btn-gray' %>
	</div>
<% end %>