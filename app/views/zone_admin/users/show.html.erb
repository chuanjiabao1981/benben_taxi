<% @taxi_requests_group.each_pair do |day,taxi_requests| %>
	<div class="row-fluid">
		<h3 class="header smaller lighter blue"><%= day.strftime("%Y-%m-%d")%></h3>
		<ul class="ace-thumbnails">	
			<% taxi_requests.each do |t| %>
				<li>
					<div style="margin:20px">
						<img src="<%= get_static_image_src(t)%>">
						<div class="text">	
							<div class="inner">
								<span><%= t.driver_mobile%></span>
								<br/>
								<%=link_to get_static_image_src(t,false) ,title: t.driver_mobile, data:{rel: "colorbox"} do %>
									<i class="icon-zoom-in"></i>
								<% end %>
								<%= link_to [:zone_admin,t] do %>
									<i class="icon-share-alt"></i>
								<% end %>
							</div>
						</div>
						<div>
							<span class="label label-success arrowed-in-right" stlye="float:left"><%= t.driver_response_time.strftime("%H:%m")%></span>
							<span class="label label-important arrowed" style="float:right"><%= t.driver_score%>æ˜Ÿ</span><br/>
						</div>
					</div>	
				</li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= will_paginate @taxi_requests, :class => 'digg_pagination' %>

