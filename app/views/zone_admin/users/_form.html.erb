<%= simple_form_for [:zone_admin,user] ,:html => { :class => 'form-horizontal'  } do |f|%>
	<%= f.error_notification %>
	<%= f.error :base , :error_method => :to_sentence %>
	<fieldset>
		<%= f.input :mobile %>
		<%= f.input :plate %>
		<%= f.input :name %>
		<%= f.input :register_info %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.association :taxi_company, collection: TaxiCompany.all.collect {|t| [t.name,t.id]} %>
		<%= f.input :status,collection: User.status_collections ,:include_blank => false%>
	</fieldset>
	<div class="form-actions">
		<%= f.button :submit , :class => 'btn btn-primary' %>
		<%= link_to I18n.t('views.text.cancel'), [:zone_admin,:users], :class => 'btn btn-gray' %>
	</div>
<% end %>